{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "src",
    "paths": {
      "@data/*": ["data/*"],
      "@domain/*": ["domain/*"],
      "@presentation/*": ["presentation/*"],
      "@util/*": ["util/*"],
      "@infra/*": ["infra/*"],
      "@main/*": ["main/*"]
    }
  }
}
